pipeline {
    agent any
    environment {
        PATH = "${PATH}:${getTerraformpath()}"
    }
    stages {
        stage('terraform-init') {
            steps {
                echo 'terraform init'
            }
        }
        stage('terraform-destroy') {
            steps {
                echo 'terraform destroy'
            }
        }
    }
}

def getTerraformpath() {
    def tfHome = tool name: 'terraform-server', type: 'terraform'
    return tfHome
}
