pipeline {
    agent any

  environment {
      PATH = "${PATH}:${geTerraformpath()}"
    }
    

    stages {
        stage('terraform-init') {
            steps {
                echo 'terraform init'
            }
        }
    }
     stages {
        stage('terraform-apply') {
            steps {
                echo 'terraform apply'
            }
        }
    }
}

def getTerraformpath (){
    def tfHome = tool name: 'terraform-server', type: 'terraform'
    return tfHome 
}
