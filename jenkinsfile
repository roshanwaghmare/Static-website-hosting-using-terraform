pipeline {
    agent any

  environment {
      PATH = "${PATH}:${geTerraformpath()}"
    }
    

    stages {
        stage('terraform-init & apply ') {
            steps {
                sh  'terraform init'
                sh  'terraform apply'
            }
        }
    }
}

def getTerraformpath (){
    def tfHome = tool name: 'terraform-server', type: 'terraform'
    return tfHome 
}
